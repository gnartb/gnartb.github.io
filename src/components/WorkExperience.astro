---
interface Props {
    companyName?: string;
    roleTitle?: string;
    roleDescription?: string;
    fromTo?: string ;
}
const { companyName, roleTitle, roleDescription, fromTo } = Astro.props;
---


    <div class="flex flex-col gap-1">
        <div class=" text-base font-medium text-bodyColor">
            {companyName}
        </div>
        <div class="flex flex-row items-center text-urlColor gap-2">
            <p>{roleTitle}</p>
            <span class="text-xs opacity-30"> | </span>
            <p>{fromTo}</p>
        </div>
        <p class="text-subColor">
            {roleDescription}
        </p>
        
    </div>

