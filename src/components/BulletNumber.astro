---
interface Props {
    number: string,
    text: string;
}
const { number, text } = Astro.props;
---

<h3 class="flex items-center text-xl font-semibold mb-4 text-gray-800">
    <span
        class="flex items-center justify-center w-8 h-8 bg-blue-100 text-blue-600 rounded-full mr-4 font-bold"
        >{number}</span
    >
    {text}
</h3>
