---
interface Props {
    title?: string;
    description?: string;
    url?: string;
    targetType?: string;
    date: string;
    isDisplayDate?: boolean;
    extraGap?: string;

}
const { title, description, url, targetType="_self", date, isDisplayDate=true, extraGap } = Astro.props;
---

<div class="flex flex-row gap-8">
    <!-- row 1: title & description -->
    <div class={`${extraGap} flex flex-1 flex-grow flex-col gap-2`}>
        <div>
            <a href={url} target={targetType} class="typo-link text-light-body dark:text-dark-body">{title}</a>
        </div>
        {
            description && (
                <p class="typo-ssubtle text-light-subtle dark:text-dark-subtle mr-3">
                    "{description}"
                </p>
            )
        }
    </div>
    <!-- row 2: date -->
    <div class="flex text-ssubtle text-light-subtle dark:text-dark-subtle">
        {date && isDisplayDate ? date.split(", ")[0] : ''}
    </div>
</div>

