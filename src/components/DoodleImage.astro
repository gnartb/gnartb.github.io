---
interface Props {
    imageName?: string;
    imageDesc?: string;
    imageDate?: string;
}
const { imageDesc, imageName, imageDate } = Astro.props;
---

<div class="flex flex-col gap-8">
    <div class="flex flex-col gap-2">
        <p class="font-bold">
            {imageDate}
        </p>
        <p>
            {imageDesc}
        </p>
    </div>
    <div class=" min-w-80">
        <img src={imageName} alt="doodle" class="w-max h-auto rounded-lg shadow-md" />
    </div>
</div>