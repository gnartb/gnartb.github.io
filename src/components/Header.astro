---
import ThemeIcon from "./ThemeIcon.astro";

export interface Props {
	pageTitle?: string;
	pageIntro?: string;
}

const {
	pageTitle,
	pageIntro,
} = Astro.props;


---

<header class="flex flex-row gap-4 items-start bg-light-background dark:bg-dark-background">
	<div>
		<p class="font-semibold text-light-heading dark:text-dark-heading">{pageTitle}</p>
		<p class="text-ssubtle text-light-subtle dark:text-dark-subtle">{pageIntro}</p>
	</div>
	<nav class="flex grow items-center justify-end gap-6 text-sm md:gap-8">
		<ThemeIcon />
	</nav>
</header>
