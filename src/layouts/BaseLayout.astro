---
// Component Imports
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeadBase from "../components/HeadBase.astro";

export interface Props {
	pageTitle: string;
	urlText?: string;
	pageHeadline?: string;
	subText?: string;
	canonicalLink?: string;
}

const { pageTitle, urlText, pageHeadline, subText, canonicalLink } = Astro.props;
---

<html lang="en">
	<HeadBase pageTitle={pageTitle} canonical={canonicalLink} />
	<body
		id="top"
		class="flex flex-col min-h-screen mx-auto max-w-xl p-6
		bg-light-background
		selection:bg-lime-400
		selection:text-black
		text-light-body
		text-left typo-body
		dark:bg-dark-background
		dark:selection:bg-zinc-800
		dark:selection:text-dark-body
		dark:text-dark-body"
	>
		<container class="flex flex-grow flex-col gap-24">
			<Header />
			<content class="flex flex-col gap-20">
				<div class="flex flex-col gap-4">
					{urlText && <p class="text-sm font-nav text-light-subtle dark:text-dark-subtle">{urlText}</p>}
					{pageHeadline && <p class="text-3xl text-light-heading dark:text-dark-heading font-heading">{pageHeadline}</p>}
					{subText && <p class="typo-subtle text-light-subtle dark:text-dark-subtle">{subText}</p>}
				</div>
				<slot />
			</content>
			<Footer />
		</container>
	</body>
</html>
