---
// Component Imports
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeadBase from "../components/HeadBase.astro";


interface Props {
  pageTitle: string;
  urlText?: string;
  pageHeadline?: string;
  subText?: string;
}

const { pageTitle, urlText, pageHeadline, subText, canonical } = Astro.props;
---

<html lang="en">
	<HeadBase pageTitle={pageTitle}/>
	<body id="top"
		class="mx-auto max-w-xl p-6 text-left selection:bg-lime-400 selection:text-black bodyParagraph bg-bgColor flex flex-col min-h-screen"
	>
		<container class="flex flex-grow flex-col gap-24">
			<Header />
			<content class="flex flex-col gap-16">
				<div class="flex flex-col gap-4">
					{urlText && <p class="urlText">{urlText}</p>}
					{pageHeadline && <p class="text-2xl font-headLineFont">{pageHeadline}</p>}
					{subText && <p class="subText">{subText}</p>}
				</div>
				<slot />
			</content>
			<Footer />
		</container>
	</body>
</html>
