---
// Component Imports
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeadBase from "../components/HeadBase.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<html lang="en">
	<HeadBase />
	<body id="top"
		class="mx-auto max-w-xl p-6 pt-4 text-left text-bodyColor md:pt-16 bodyParagraph bg-bgColor flex flex-col min-h-screen"
	>
		<container class="flex flex-grow flex-col gap-24">
			<Header />
			<content class="flex flex-grow flex-col gap-16">
				<slot />
			</content>
			<Footer />
		</container>
	</body>
</html>
