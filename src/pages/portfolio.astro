---
// Component Imports
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeadBase from "../components/HeadBase.astro";
import DetailComp from "../components/DetailComp.astro";
import WorkExperience from "../components/WorkExperience.astro";
---

<html lang="en">
    <HeadBase />
    <body class="mx-auto max-w-xl p-6 pt-4 md:pt-6 bodyParagraph bg-zinc-900">
        <container class="flex flex-col gap-20">
            <Header />
            <content class="flex flex-col min-h-screen gap-20">
                <div class="flex flex-col gap-4">
                    <p class="urlText">/works</p>
                    <p class="text-4xl font-headLineFont">Works I've done</p>
                </div>
                <!-- projects -->
                <div class="flex flex-col gap-3">
                    <p class="sectionTitle">.projects</p>
                    <div class="flex flex-col gap-8">
                        <DetailComp
                        postTitle="Digital Lending web platforms"
                        postDescription="P2P platforms for Investor and SMEs across multiple markets"
                        url=""
                        />
                        <DetailComp
                        postTitle="Investor Mobile Application"
                        postDescription="Browse live facilities available for investing and mange investments"
                        url=""
                        />
                        <DetailComp
                        postTitle="DHF"
                        postDescription="Farm diary management and inventory tracking"
                        url="https://www.dhfplatforms.com/"
                        />
                        <DetailComp
                        postTitle="Snafu Records"
                        postDescription="Portal & Website"
                        url="https://www.snafurecords.com/"
                        />
                        <DetailComp
                        postTitle="BackCountry Navigator"
                        postDescription="Outdoor navigation app that helps outdoor adventurers to find their way through the wilderness ðŸŒ³"
                        url="https://play.google.com/store/apps/details?id=com.crittermap.backcountrynavigator.xe"
                        />
                    </div>
                </div>
                <!-- case studies -->
                <div id="caseStudies" class="flex flex-col gap-3">
                    <p class="sectionTitle">.case studies</p>
                    <div class="flex flex-col gap-8">
                        <DetailComp
                        postTitle="Investment application"
                        postDescription="Redesign mobile Investor mobile app with more features for better experience"
                        url="/portfolio/onboarding"
                        />
                        <DetailComp
                        postTitle="Simplifying the long onboarding process"
                        postDescription="Less steps for Customer and reduce manual works for Internal Team"
                        url="/about"
                        />
                    </div>
                </div>
                <!-- work experience -->
                <div class="flex flex-col gap-3">
                    <!-- section title -->
                    <p class="sectionTitle">.where I've worked</p>
                    <div class="flex flex-col gap-8">
                        <WorkExperience
                            companyName="Validus Capital"
                            roleDescription="Drive the end to end design process across Digital Lending products of all countries (Singapore, Viet Nam, Thai Land), including web and mobile applications."
                            roleTitle="Senior/Product Design Lead (Regional)"
                            fromTo="2019-2023"
                            />
                        <WorkExperience
                            companyName="NashTech Global"
                            roleDescription="Design career portal that help candidates to search, apply for job easily and showcasing the company's work-life culture."
                            roleTitle="UX/UI Designer"
                            fromTo="2017"
                            />
                        <WorkExperience
                            companyName="Sentifi AG"
                            roleDescription="Worked on widgets that help Investor to identify outliers and new investment opportunities, spot risks and monitor trends."
                            roleTitle="Digittal Designer"
                            fromTo="2014-2017"
                            />
                    </div>
                </div>
            </content>
            <Footer />
        </container>
    </body>
</html>
